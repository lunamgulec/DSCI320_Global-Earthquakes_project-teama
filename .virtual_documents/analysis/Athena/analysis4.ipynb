print(f"\nEvents with gap > 180°: {(earthquakes['gap'] > 180).sum()} ({(earthquakes['gap'] > 180).mean()*100:.1f}%)")
print(f"Events with gap < 90° (good coverage): {(earthquakes['gap'] < 90).sum()} ({(earthquakes['gap'] < 90).mean()*100:.1f}%)")

