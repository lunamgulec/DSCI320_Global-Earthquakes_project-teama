}).reset_index()
small_event_summary.columns = ['nst_bin', 'gap_level', 'small_events', 'total_events']
small_event_summary['small_event_rate'] = small_event_summary['small_events'] / small_event_summary['total_events']

heatmap_detection = alt.Chart(small_event_summary).mark_rect().encode(
    alt.X('nst_bin:O', title='Station Count'),
